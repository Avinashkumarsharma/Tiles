<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BoardBackground"
    tools:context="com.thenoob.blackbox.tiles.Game" >

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chimage"
        android:layout_below="@+id/chimage"
        android:paddingBottom="5dp"
        android:text="00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/score" />

   

    <TextView
        android:id="@+id/chimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:text="@string/moves" />

     <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/score"
        android:background="@color/containerbg" >

    </FrameLayout>

     <Button
         android:id="@+id/togglestate"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="32dp"
         android:layout_height="10dp"
         android:layout_alignBottom="@+id/timer"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/chimage"
         android:background="@drawable/pause" />

     <TextView
         android:id="@+id/timer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/score"
         android:layout_alignBottom="@+id/score"
         android:layout_marginRight="86dp"
         android:layout_toLeftOf="@+id/togglestate"
         android:text="00:00"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/black" />

</RelativeLayout>
